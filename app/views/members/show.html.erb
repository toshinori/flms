<%- model_class = @member.class -%>
<h1><%=t '.title', :default => model_class.model_name.human %></h1>

<p>
  <strong><%= model_class.human_attribute_name(:last_name) %>:</strong><br>
  <%= @member.last_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:first_name) %>:</strong><br>
  <%= @member.first_name %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:player_number) %>:</strong><br>
  <%= @member.player_number %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:member_type) %>:</strong><br>
  <%= @member.member_type %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:uniform_number) %>:</strong><br>
  <%= @member.uniform_number %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:position_id) %>:</strong><br>
  <%= @member.position_id %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:deleted_at) %>:</strong><br>
  <%= @member.deleted_at %>
</p>
<p>
  <strong><%= model_class.human_attribute_name(:birth_day) %>:</strong><br>
  <%= @member.birth_day %>
</p>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              members_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_member_path(@member), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              member_path(@member),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
