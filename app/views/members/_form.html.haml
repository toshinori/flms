= form_for @member, :html => { :class => 'form-horizontal' } do |f|
  .control-group
    = f.label :last_name, :class => 'control-label'
    .controls
      = f.text_field :last_name, :class => 'text_field'
  .control-group
    = f.label :first_name, :class => 'control-label'
    .controls
      = f.text_field :first_name, :class => 'text_field'
  .control-group
    = f.label :player_number, :class => 'control-label'
    .controls
      = f.text_field :player_number, :class => 'text_field'
  .control-group
    = f.label :member_type, :class => 'control-label'
    .controls
      = f.select :member_type, member_type_for_select
  .control-group
    = f.label :uniform_number, :class => 'control-label'
    .controls
      = f.number_field :uniform_number, :class => 'number_field'
  .control-group
    = f.label :position_id, :class => 'control-label'
    .controls
      = f.number_field :position_id, :class => 'number_field'
  .control-group
    = f.label :birth_day, :class => 'control-label'
    .controls
      = f.date_select :birth_day, :class => 'date_select'
  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), |
      members_path, :class => 'btn'                                |
